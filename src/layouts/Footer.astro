---
import linkList from '@/data/menu.json';
import Logo from '@/components/ui/Logo.astro';
import { Icon } from 'astro-icon/components';
---

<footer class="shadow-base bg-bg mb-12.5 lg:mb-25 lg:pt-6 lg:pb-11 md:pt-4 md:pb-8 pt-7.5 pb-12.5">
    <div class="container flex flex-col md:flex md:flex-row justify-between items-center">
        <nav>
            <ul class="hidden md:flex flex-col gap-3">
                {
                    linkList.map((link) => (
                        <li>
                            <a class="font-second font-bold text-md lg:text-xl hover:text-accent transition-colors" href={link.to}>
                                {link.text}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </nav>

        <div class="mb-7 md:mb-0">
            <Logo text="сервис здорового питания" w={300} h={125} />
        </div>

        <div>
            <div class="hidden md:block mb-3.5 lg:mb-5 font-second text-right font-bold text-md lg:text-xl">
                <a class="block lg:mb-4 md:mb-3 hover:text-accent transition-colors" href="#">Условия <br /> сотрудничества</a>
                <a href="#" class="hover:text-accent transition-colors">FAQ</a>
            </div>

            <div class="flex gap-2 justify-between lg:mb-4 mb-2.5">
                <Icon class="cursor-pointer w-[20px] h-[20px] lg:w-[30px] lg:h-[30px]" name="social/vk" />
                <Icon class="cursor-pointer w-[20px] h-[20px] lg:w-[30px] lg:h-[30px]" name="social/youtube" />
                <Icon class="cursor-pointer w-[20px] h-[20px] lg:w-[30px] lg:h-[30px]" name="social/telegram" />
                <Icon class="cursor-pointer w-[20px] h-[20px] lg:w-[30px] lg:h-[30px]" name="social/facebook" />
            </div>

            <a class="text-sm lg:text-xl font-bold text-accent" href="tel:+0000000000">+9 (553) 685-53-28</a>
        </div>
    </div>
</footer>
