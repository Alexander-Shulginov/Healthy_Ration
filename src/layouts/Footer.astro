---
import linkList from '@/data/menu.json';
import Logo from '@/components/ui/Logo.astro';
import { Icon } from 'astro-icon/components';
---

<footer class="shadow-base bg-bg mb-12.5 pt-7.5 pb-12.5 md:pt-4 md:pb-8 lg:mb-25 lg:pt-6 lg:pb-11">
    <div class="container flex flex-col items-center justify-between md:flex md:flex-row">
        <nav>
            <ul class="hidden flex-col gap-3 md:flex">
                {
                    linkList.map((link) => (
                        <li>
                            <a class="font-second text-md hover:text-accent font-bold transition-colors lg:text-xl" href={link.to}>
                                {link.text}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </nav>

        <div class="mb-7 md:mb-0">
            <Logo text="сервис здорового питания" w={300} h={125} />
        </div>

        <div>
            <div class="font-second text-md mb-3.5 hidden text-right font-bold md:block lg:mb-5 lg:text-xl">
                <a class="hover:text-accent block transition-colors md:mb-3 lg:mb-4" href="#">Условия <br /> сотрудничества</a>
                <a href="#" class="hover:text-accent transition-colors">FAQ</a>
            </div>

            <div class="mb-2.5 flex justify-between gap-2 lg:mb-4">
                <Icon class="h-[20px] w-[20px] cursor-pointer lg:h-[30px] lg:w-[30px]" name="social/vk" />
                <Icon class="h-[20px] w-[20px] cursor-pointer lg:h-[30px] lg:w-[30px]" name="social/youtube" />
                <Icon class="h-[20px] w-[20px] cursor-pointer lg:h-[30px] lg:w-[30px]" name="social/telegram" />
                <Icon class="h-[20px] w-[20px] cursor-pointer lg:h-[30px] lg:w-[30px]" name="social/facebook" />
            </div>

            <a class="text-accent text-sm font-bold lg:text-xl" href="tel:+0000000000">+9 (553) 685-53-28</a>
        </div>
    </div>
</footer>
