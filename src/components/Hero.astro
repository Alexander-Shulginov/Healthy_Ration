<script>
    import Swiper from 'swiper';
    import { Pagination, Navigation, Autoplay } from 'swiper/modules';
    import 'swiper/css/bundle';


    new Swiper('.swiper', {
        modules: [Pagination, Navigation, Autoplay],
        loop: true,
        speed: 1200,
        autoplay: {
